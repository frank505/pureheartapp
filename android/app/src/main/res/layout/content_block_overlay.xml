<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/overlay_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Shield Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="🛡️"
            android:textSize="48sp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Content Blocked"
            android:textColor="#FF6B6B"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Message -->
        <TextView
            android:id="@+id/block_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="This content has been blocked by your accountability settings."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Accountability Notice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="This activity will be logged to your accountability partner."
            android:textColor="#BBBBBB"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Bottom Notice -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ThePurityApp Accountability • Protecting your digital wellness"
        android:textColor="#888888"
        android:textSize="12sp" />

</LinearLayout>
